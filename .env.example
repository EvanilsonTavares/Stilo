# Stilo env example
# Copy to .env files as needed. Do not commit real secrets.

# Backend (FastAPI)
# Gemini API key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=YOUR_GOOGLE_AI_STUDIO_KEY

# WhatsApp (Meta Cloud API)
# Docs/get started: https://developers.facebook.com/docs/whatsapp/cloud-api/get-started
# App dashboard: https://developers.facebook.com/
WHATSAPP_VERIFY_TOKEN=YOUR_WHATSAPP_VERIFY_TOKEN
WHATSAPP_TOKEN=YOUR_WHATSAPP_TOKEN
WHATSAPP_PHONE_ID=YOUR_WHATSAPP_PHONE_ID
WHATSAPP_APP_SECRET=YOUR_WHATSAPP_APP_SECRET

# Replicate token (VTON): https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=YOUR_REPLICATE_API_TOKEN

# Google Cloud project and service account (Firestore/Storage)
# Project selector: https://console.cloud.google.com/projectselector2/home/dashboard
# Service accounts: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_CLOUD_PROJECT=YOUR_GCP_PROJECT_ID
GOOGLE_APPLICATION_CREDENTIALS=PATH_TO_SERVICE_ACCOUNT_JSON
ENV=development

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:8000
